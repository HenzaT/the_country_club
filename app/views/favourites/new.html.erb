<h1>Add to favourite</h1>

<% if @favourite_already_created %>
  <h2>You have already added this country to your favourites!</h2>
  <h3>Update your favourites instead?</h3>
<% else %>
  <div class="form">
    <%= simple_form_for [@country, @favourite] do |f| %>
      <%= f.input :rating %>
      <%= f.input :note %>
      <%= f.input :visit_date %>
      <%= f.input :times_visited %>
      <%= f.button :submit %>
    <% end %>
  </div>
<% end %>
