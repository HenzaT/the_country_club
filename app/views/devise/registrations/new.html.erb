<div class="user-forms">
  <h1 class="form-header">Sign up</h1>

  <p>Sign up to start adding countries to your wishlist and favourites</p>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form") do |f| %>
    <%= f.error_notification %>

    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: "type email here...",
                class: "email" %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" },
                placeholder: "type password here...",
                class: "password" %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" },
                placeholder: "confirm your password",
                class: "password" %>

    <%= f.button :submit, "Sign up", class: "submit-button" %>
  <% end %>
  <div class="login-link">
    <%= render "devise/shared/links" %>
  </div>
</div>
