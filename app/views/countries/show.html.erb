<%# Country show %>
<div class="country-page">
  <div class="country-card-large">
    <div class="card-title">
      <h1><%= @country.name %></h1>
    </div>
    <div class="card-image">
      <%= image_tag(@country.flag, alt: "flag of #{@country.name}") %>
    </div>
    <div class="card-info">
      <h2>Capital: <%= @country.capital %></h2>
      <h2>Language: <%= @country.language_one %></h2>
    </div>
  </div>

  <div class="wishlist">
    <% if @wishlist_already_created %>
      <h2>Wishlist</h2>
      <%= link_to 'Edit wishlist', edit_country_wishlist_path(@country) %>
      <% @user_wishlists.each do |wishlist| %>
        <ul>
          <li>How much you want to visit: <%= wishlist.desire_rating %></li>
          <li>Notes: <%= wishlist.note %></li>
          <li>Future Visit Date: <%= wishlist.future_visit_date %></li>
        </ul>
      <% end %>
    <% else %>
      <div>
        <%= link_to 'Add to wishlist', new_country_wishlist_path(@country) %>
      </div>
    <% end %>
  </div>
</div>

<div>
  <%= render 'shared/back_button' %>
</div>
