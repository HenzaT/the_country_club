<% countries.each do |country| %>
  <%= link_to country_path(country), class: "country-link-card" do %>
    <%= render "shared/country_card_small",
        country: country,
        wishlist: Wishlist.exists?(user_id: current_user, country_id: country),
        favourite: Favourite.exists?(user_id: current_user, country_id: country)
    %>
  <% end %>
<% end %>
