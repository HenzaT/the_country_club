<div class="sidebar">
  <% if user_signed_in? %>
    <div class="nav-welcome">
      <i class="fa-solid fa-plane-departure" alt="plane taking off icon" id="nav-user-icon"></i>
      <h1>Hi, <%= current_user.first_name %>!</h1>
    </div>
    <ul class="nav-items">
      <li class="nav-item">
        <%= link_to root_path, class: "nav-link active" do %>
          <i class="fa-solid fa-house-chimney icon" alt="home icon"></i>
          <p>Home</p>
        <% end %>
      </li>
      <li class="nav-item">
        <button class="dropdown-btn nav-link" data-navbar-target="downArrow" data-action="click->navbar#toggleDropdownMenu">
          <i class="fa-solid fa-angle-down icon" alt="arrow pointing down" id="down-arrow"></i>
          <p>Continents</p>
        </button>
        <div class="dropdown-container" data-navbar-target="dropdownMenu">
          <%= link_to continent_path("Africa"), class: "nav-link" do %>
            <i class="fa-solid fa-earth-africa icon" alt="Africa on globe"></i>
            <p>Africa</p>
          <% end %>
          <%= link_to continent_path("Asia"), class: "nav-link" do %>
            <i class="fa-solid fa-earth-asia icon" alt="Asia on globe"></i>
            <p>Asia</p>
          <% end %>
          <%= link_to continent_path("Europe"), class: "nav-link" do %>
            <i class="fa-solid fa-earth-europe icon" alt="Europe on globe"></i>
            <p>Europe</p>
          <% end %>
          <%= link_to continent_path("Oceania"), class: "nav-link" do %>
            <i class="fa-solid fa-earth-oceania icon" alt="Oceania on globe"></i>
            <p>Oceania</p>
          <% end %>
          <%= link_to region_path("North America"), class: "nav-link" do %>
            <i class="fa-solid fa-earth-americas icon" alt="Americas on globe"></i>
            <p>North America</p>
          <% end %>
          <%= link_to region_path("Central America"), class: "nav-link" do %>
            <i class="fa-solid fa-earth-americas icon" alt="Americas on globe"></i>
            <p>Central America</p>
          <% end %>
          <%= link_to region_path("South America"), class: "nav-link" do %>
            <i class="fa-solid fa-earth-americas icon" alt="Americas on globe"></i>
            <p>South America</p>
          <% end %>
          <%= link_to region_path("Caribbean"), class: "nav-link" do %>
            <i class="fa-solid fa-earth-americas icon" alt="Americas on globe"></i>
            <p>Caribbean</p>
          <% end %>
        </div>
      </li>
      <li class="nav-item">
        <%= link_to dashboard_path, class: "nav-link" do %>
          <i class="fa-solid fa-display icon" alt="desktop screen icon"></i>
          <p>Member's Area</p>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" do %>
          <i class="fa-solid fa-arrow-right-from-bracket icon" alt="log out icon"></i>
          <p>Log out</p>
        <% end %>
      </li>
    </ul>
  <% else %>
    <ul class="nav-items">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
    </ul>
  <% end %>
</div>
