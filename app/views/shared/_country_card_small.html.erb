<div class="country-card-small">
  <div class="card-image">
    <%= image_tag(country.flag, alt: country.flag_alt) %>
  </div>
  <div class="card-title">
    <h1><%= country.name %></h1>
  </div>
  <% case %>
  <% when wishlist && favourite %>
    <div class="icons">
      <i class="fa-solid fa-star"></i>
      <i class="fa-solid fa-heart"></i>
    </div>

  <% when wishlist %>
    <div class="icons">
      <i class="fa-solid fa-star"></i>
      <i class="fa-regular fa-heart"></i>
    </div>

  <% when favourite %>
    <div class="icons">
      <i class="fa-regular fa-star"></i>
      <i class="fa-solid fa-heart"></i>
    </div>

  <% else %>
    <div class="icons">
      <i class="fa-regular fa-star"></i>
      <i class="fa-regular fa-heart"></i>
    </div>
  <% end %>
</div>
